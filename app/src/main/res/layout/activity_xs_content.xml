<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.zwj.customview.titleview.CommonTitleView
        android:id="@+id/id_title"
        style="@style/CommonTitleStyle"
        app:tvtitle="美文段落" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20px">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_content"
                style="@style/TextSize36AndColor333333Style"
                android:layout_width="match_parent"
                android:layout_marginTop="50px" />

            <LinearLayout style="@style/XsContentItemStyle">

                <TextView
                    style="@style/TextSize36AndColor333333Style"
                    android:text="出自：" />

                <TextView
                    android:id="@+id/tv_book_name"
                    style="@style/TextSize36AndColor333333Style" />
            </LinearLayout>

            <LinearLayout style="@style/XsContentItemStyle">

                <TextView
                    style="@style/TextSize36AndColor333333Style"
                    android:text="内容类型：" />

                <TextView
                    android:id="@+id/tv_content_type_name"
                    style="@style/TextSize36AndColor333333Style" />
            </LinearLayout>

            <LinearLayout style="@style/XsContentItemStyle">

                <TextView
                    style="@style/TextSize36AndColor333333Style"
                    android:text="书籍类型：" />

                <TextView
                    android:id="@+id/tv_book_type_name"
                    style="@style/TextSize36AndColor333333Style" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
