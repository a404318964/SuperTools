<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <gradient android:angle="270" android:endColor="@color/wy_blue_press" android:startColor="@color/wy_blue_press" />
            <corners android:radius="5dp" />
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape>
            <gradient android:angle="270" android:endColor="#e3e3e3" android:startColor="#e3e3e3" />
            <corners android:radius="5dp" />
        </shape>
    </item>

    <item android:state_enabled="true">
        <shape>
            <gradient android:angle="270" android:endColor="@color/wy_blue" android:startColor="@color/wy_blue" />
            <corners android:radius="5dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient android:angle="270" android:endColor="@color/wy_blue" android:startColor="@color/wy_blue" />
            <corners android:radius="5dp" />
        </shape>
    </item>

</selector>